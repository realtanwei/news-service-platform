<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.sdnware.news.dao.mybatis.CloudUserMapper">

    <select id="queryUserById" parameterType="java.lang.Integer" resultType="com.sdnware.news.pojo.mybatis.CloudUserInfo">
        SELECT * FROM t_sys_user
        <where>
            <if test="id != null">
                id = #{id, jdbcType=INTEGER}
            </if>
        </where>
    </select>

</mapper>